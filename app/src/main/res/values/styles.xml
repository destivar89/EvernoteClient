<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">@dimen/row_title_size</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="DetailContentTextAppearance">
        <item name="android:textSize">@dimen/row_title_size</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

</resources>
